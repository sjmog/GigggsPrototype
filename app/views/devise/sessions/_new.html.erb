<h2>Please enter your password to sign in.</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "sign_in_user"}, :format => :json, :remote => true ) do |f| %>
  <div>
 	 <%= f.email_field :email, :autofocus => true, placeholder: 'Your e-mail address', :id => "loginEmailField" %>
  </div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: 'btn btn-success btn-medium' %></div>
<% end %>

